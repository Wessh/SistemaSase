@model SistemaSase.Models.tblEstReparo

@{
    ViewBag.Title = "Create";
}

<div class="row-fluid">
    <div class="span12">
        <div class="widget-box">
            <div class="widget-title">
                <span class="icon"> <i class="icon-align-justify"></i> </span>
                <h5>Registro</h5>
            </div>
            <div class="widget-content nopadding">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="control-group">
                            @Html.LabelFor(model => model.Parede, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="controls">
                                @Html.CheckBoxFor(model => model.Parede)
                                @Html.ValidationMessageFor(model => model.Parede, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="control-group">
                            @Html.LabelFor(model => model.Teto, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="controls">
                                @Html.CheckBoxFor(model => model.Teto)
                                @Html.ValidationMessageFor(model => model.Teto, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="control-group">
                            @Html.LabelFor(model => model.Calcada, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="controls">
                                @Html.CheckBoxFor(model => model.Calcada)
                                @Html.ValidationMessageFor(model => model.Calcada, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="control-group">
                            @Html.LabelFor(model => model.Quadra, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="controls">
                                @Html.CheckBoxFor(model => model.Quadra)
                                @Html.ValidationMessageFor(model => model.Quadra, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="control-group">
                            @Html.LabelFor(model => model.Capina, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="controls">
                                    @Html.CheckBoxFor(model => model.Capina)
                                    @Html.ValidationMessageFor(model => model.Capina, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="control-group">
                            @Html.LabelFor(model => model.Portas, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="controls">
                                    @Html.CheckBoxFor(model => model.Portas)
                                    @Html.ValidationMessageFor(model => model.Portas, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="control-group">
                            @Html.LabelFor(model => model.Piso, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="controls">
                                @Html.CheckBoxFor(model => model.Piso)
                                @Html.ValidationMessageFor(model => model.Piso, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-actions text-center">
                            <input type="submit" value="Registrar" class="btn btn-default" />
                        </div>
                    </div>
                }

            </div>
        </div>
        <div>
            @Html.ActionLink("Voltar", "Index", "", new { @class = "btn btn-mini" })
        </div>
    </div>
</div>
@section Css{
    <link rel="stylesheet" href="~/Content/Layout/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/Layout/css/bootstrap-responsive.min.css" />
    <link rel="stylesheet" href="~/Content/Layout/css/uniform.css" />
    <link rel="stylesheet" href="~/Content/Layout/css/select2.css" />
    <link rel="stylesheet" href="~/Content/Layout/css/matrix-style.css" />
