@model IEnumerable<SistemaSase.Models.tblEstReparo>

@{
    ViewBag.Title = "Index";
}

<!--
<p>
    @Html.ActionLink("Create New", "Create")
</p>-->
<div class="container-fluid">

    <div class="row-fluid">
        <div class="widget-box">
            <div class="widget-title">
                <span class="icon"><i class="icon-th"></i></span>
                <h5>Registros</h5>
            </div>
            <div class="widget-content nopadding">

                <table class="table table-bordered data-table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Parede)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Teto)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Calcada)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Quadra)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Capina)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Portas)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Piso)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr class="gradeA">
                                <td>
                                    @Html.DisplayFor(modelItem => item.Parede)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Teto)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Calcada)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Quadra)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Capina)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Portas)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Piso)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
