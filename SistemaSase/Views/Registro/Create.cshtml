@model SistemaSase.Models.tblRegistro

@{
    ViewBag.Title = "Registro";
}

<div class="row-fluid">
    <div class="span">
        <div class="widget-box">
            <div class="widget-title">
                <span class="icon"> <i class="icon-align-justify"></i> </span>
                <h5>Registro de usuário</h5>
            </div>
            <div class="widget-content nopadding">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="control-group">
                            @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label" })
                            <div class="controls">
                                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "span11" } })
                                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="control-group">
                            @Html.LabelFor(model => model.Matricula, htmlAttributes: new { @class = "control-label" })
                            <div class="controls">
                                @Html.EditorFor(model => model.Matricula, new { htmlAttributes = new { @class = "span11" } })
                                @Html.ValidationMessageFor(model => model.Matricula, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="control-group">
                            @Html.LabelFor(model => model.Senha, htmlAttributes: new { @class = "control-label" })
                            <div class="controls">
                                @Html.EditorFor(model => model.Senha, new { htmlAttributes = new { @class = "span11", type="password" } })
                                @Html.ValidationMessageFor(model => model.Senha, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-actions text-center">

                            <input type="submit" value="Create" class="btn btn-default" />

                        </div>
                    </div>
                }
                <!--
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
        -->
            </div>
        </div>
    </div>
</div>

                @section Scripts {
                    @Scripts.Render("~/bundles/jqueryval")
                }
