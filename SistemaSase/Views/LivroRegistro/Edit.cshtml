@model SistemaSase.Models.tblLivroRegistro

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<div class="row-fluid">
    <div class="span12">
        <div class="widget-box">
            <div class="widget-title">
                <span class="icon"> <i class="icon-align-justify"></i> </span>
                <h5>Editar livro de registro</h5>
            </div>
            <div class="widget-content nopadding">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="control-group">
                            @Html.LabelFor(model => model.LivroOcorrecia, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="controls">
                                @Html.CheckBoxFor(model => model.LivroOcorrecia, new { @class = "checkbox" })
                                @Html.ValidationMessageFor(model => model.LivroOcorrecia, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="control-group">
                            @Html.LabelFor(model => model.RegistroDiarios, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="controls">
                                @Html.CheckBoxFor(model => model.RegistroDiarios, new { @class = "checkbox" })
                                @Html.ValidationMessageFor(model => model.RegistroDiarios, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-actions text-center">
                            <input type="submit" value="Create" class="btn btn-default" />
                        </div>
                    </div>
                }

            </div>
        </div>
        <div>
            @Html.ActionLink("Voltar", "Index", "", new { @class = "btn btn-mini" })
        </div>
    </div>
</div>
@section Css{
    <link rel="stylesheet" href="~/Content/Layout/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/Layout/css/bootstrap-responsive.min.css" />
    <link rel="stylesheet" href="~/Content/Layout/css/colorpicker.css" />
