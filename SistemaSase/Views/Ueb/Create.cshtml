                            </div>
                        </div>

                        <div class="control-group">
                            @Html.LabelFor(model => model.Nucleo, htmlAttributes: new { @class = "control-label" })
                            <div class="controls">
                                @Html.EditorFor(model => model.Nucleo, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Nucleo, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="control-group">
                            @Html.LabelFor(model => model.FKGestor, "FKGestor", htmlAttributes: new { @class = "control-label" })
                            <div class="controls">
                                @Html.DropDownList("FKGestor", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.FKGestor, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="control-group">
                            @Html.LabelFor(model => model.Contato, htmlAttributes: new { @class = "control-label" })
                            <div class="controls">
                                @Html.EditorFor(model => model.Contato, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Contato, "", new { @class = "text-danger" })
