                                @Html.EditorFor(model => model.Contato2, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Contato2, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="control-group">
                            @Html.LabelFor(model => model.DataHora, htmlAttributes: new { @class = "control-label" })
                            <div class="controls">
                                @Html.EditorFor(model => model.DataHora, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.DataHora, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="control-group">
                            @Html.LabelFor(model => model.FkRegistro, "FkRegistro", htmlAttributes: new { @class = "control-label" })
                            <div class="controls">
                                @Html.DropDownList("FkRegistro", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.FkRegistro, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-actions text-center">
                                <input type="submit" value="Registrar" class="btn btn-default" />
                        </div>
                    </div>
                }
